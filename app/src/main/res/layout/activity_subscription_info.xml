<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".SubscriptionInfoActivity">

    <!-- Logo de la App -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leerliblogo"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo de la aplicación" />

    <!-- Título de Suscripción -->
    <TextView
        android:id="@+id/subscriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige tu Plan de Suscripción"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- CardView para Suscripción Mensual -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/monthlySubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suscripción Mensual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/monthlyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4.99"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/subscribeMonthlyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background"
                android:text="Suscribirse"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView para Suscripción Anual -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/annualSubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suscripción Anual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/annualPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.99"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/subscribeAnnualButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background"
                android:text="Suscribirse"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
