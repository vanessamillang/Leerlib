<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6E7F" /> <!-- Color de fondo al presionar -->
            <corners android:radius="32dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#bfe9ff" /> <!-- Color de fondo en estado normal -->
            <corners android:radius="32dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
